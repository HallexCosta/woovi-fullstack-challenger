{
  "private": true,
  "name": "woovi",
  "author": "HÃ¡llex Costa <hallex.costa@hotmail.com>",
  "scripts": {
    "start": "turbo run start --env-mode=loose",
    "build": "turbo run build --env-mode=loose",
    "seeds": "turbo run seeds --env-mode=loose",
    "copy:env": "turbo run copy:env",
    "dev": "turbo run dev",
    "format": "biome format --write .",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "relay": "turbo run relay",
    "schema": "turbo run schema",
    "compose:up": "docker-compose -f docker-compose.yml up -d",
    "compose:down": "docker-compose -f docker-compose down",
    "bkp:deploy:bank-ui": "cp ./apps/bank-ui/nixpacks.toml . && railway link -p woovi-bank --service woovi-bank-ui && sleep 3 && railway up",
    "bkp:deploy:bank-server": "cp ./apps/bank-server/nixpacks.toml . && railway link -p woovi-bank --service woovi-bank-server && sleep 3 && railway up",
    "deploy:bank-ui": "railway link -p woovi-bank -s woovi-bank-ui && sleep 3 && railway up",
    "deploy:bank-server": "railway link -p woovi-bank -s woovi-bank-server && sleep 3 && railway up"
  },
  "dependencies": {
    "graphql": "16.8.1"
  },
  "devDependencies": {
    "@woovi/babel": "workspace:*",
    "autoprefixer": "^10.4.16",
    "babel-plugin-transform-barrels": "^1.0.10",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.1.0",
    "turbo": "latest"
  },
  "pnpm": {
    "overrides": {
      "graphql": "16.8.1"
    }
  },
  "resolutions": {
    "graphql": "16.8.1"
  },
  "packageManager": "pnpm@9.7.0",
  "workspaces": {
    "packages": ["apps/*", "packages/*"]
  }
}
